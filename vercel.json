{
  "version": 2,
  "name": "soccer-stats-predictor",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12",
    "NEXT_PUBLIC_BACKEND_URL": "@backend_url"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.12"
    }
  },
  "functions": {
    "backend/main.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "regions": ["iad1"],
  "github": {
    "silent": true
  }
}
